{
  "name": "myprojectname",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "android": "yarn workspace mobile android",
    "ios": "yarn workspace mobile ios",
    "studio": "yarn workspace mobile studio",
    "xcode": "yarn workspace mobile xcode",
    "lint": "eslint \"packages/**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint \"packages/**/*.{js,ts,tsx}\" --quiet --fix",
    "test": "yarn workspaces run test",
    "docs": "jsdoc -c jsdoc.conf.json"
  },
  "dependencies": {
    "react-native": "*"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.6.0",
    "better-docs": "2.3.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "jsdoc": "3.6.5",
    "prettier": "2.0.5",
    "prop-types": "^15.5.7",
    "typescript": "3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix"
    }
  }
}
